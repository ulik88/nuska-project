{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@env/*": [
        "./@env/*"
      ],
      "*": [
        "types/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ],
      "types": [
        "./src/types/*"
      ]
    },
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "mapper"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "types": [
    "jest",
    "react",
    "react-native"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
}